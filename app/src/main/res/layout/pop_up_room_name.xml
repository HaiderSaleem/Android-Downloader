<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="250dp" android:layout_height="wrap_content"
                                   app:cardCornerRadius="10dp"
                                   app:cardBackgroundColor="@color/fastlane_background"
                                   android:elevation="4dp"

>

    <RelativeLayout android:layout_width="250dp" android:layout_height="200dp"
                    >
    <RelativeLayout
            android:id="@+id/llName"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

    >
        <EditText
                android:id="@+id/etRoomName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:hint="@string/url"
                android:singleLine="true"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:paddingLeft="10dp"
                android:backgroundTint="@color/colorBlack"
                android:foregroundTint="@color/colorBlack"
                android:layout_margin="20dp"

        />
    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llName"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">
        <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:background="@drawable/btn_login"
                android:textColor="@color/fastlane_background"
                android:layout_marginBottom="10dp"
                android:text="Submit"
        />
        <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:background="@drawable/btn_session"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="10dp"
                android:text="Cancel"
        />
    </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>